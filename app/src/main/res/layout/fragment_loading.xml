<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.LoadingActivity">

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="@dimen/progressBar"
        android:layout_height="@dimen/progressBar"
        app:cpv_color="@color/colorPrimaryDark"
        android:layout_centerInParent="true"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/wifi_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wifi_off"
        android:layout_centerInParent="true"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/textErrorInternetConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_margin"
        android:text="@string/errorInternetConnection"
        android:layout_below="@+id/wifi_off"
        android:textSize="@dimen/main_text_size"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_btn"
        android:text="@string/try_again"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>